<%= simple_form_for @donation, :html => { :class => 'form-horizontal' } do |f| %>
<div class="form-group">
  <%= f.label :category %><br>
  <%= f.input_field :category, :label => false, :collection =>['Text Books','Empty books','Womens clothes','children clothes','Mens clothes','Footware','caps','Watches','Toys','Slates','Tables & chairs','Umbrella','Buckets','Electronic equipment'], class: "form-control", :prompt => "Choose a category" %>
</div>
<div class="form-group">
  <%= f.label :quality %><br>
  <%= f.input_field :quantity, class: "form-control" %>
</div>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="form-group">
  <%= f.label :organization_id %><br>
  <%= f.collection_select :organization_id, Organization.all, :id, :name %>
</div>

  <%= f.button :submit, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                donations_path, :class => 'btn btn-info' %>
<% end %>