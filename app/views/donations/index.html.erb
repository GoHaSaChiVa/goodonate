<p id="notice"><%= notice %></p>
<h1>Make new Donation</h1>
<%= link_to 'New Donation', new_donation_path, :class => "btn btn-raised btn-info" %>
<h1>Your Donations History</h1>

<table  class="table table-hover table-striped">
  <thead>
    <tr>
      
    
      <th>Category</th>
      <th>Quantity</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
         
        <td><%= donation.category %></td>
        <td><%= donation.quantity %></td>
        <td><%= donation.organization.name %></td>
        <td><%= link_to 'Show', donation,:class => "btn btn-raised btn-info" %></td>
        
        <% if can? :update, donation %>
        <td><%= link_to 'Edit', edit_donation_path(donation),:class => "btn btn-raised btn-warning" %></td>
        <% end %>
        <td><%= button_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-raised btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


