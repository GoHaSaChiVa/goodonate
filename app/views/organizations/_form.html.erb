<%= simple_form_for @organization, html: {multipart: true} do |f| %>
  <div class="form-group">
        <%= f.label :name %>
        <%= f.input_field :name, autofocus: true, class: "form-control" %>
      </div>
  <%= f.input :year, start_year: 1900, end_year: 2016 %>
  <div class="form-group">
        <%= f.label :description %>
        <%= f.input_field :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :category %>
        <%= f.input_field :category, class: "form-control" %>
      </div>
        <div class="form-group">
        <%= f.label :contact_number %>
        <%= f.input_field :contact_number, class: "form-control" %>
      </div>
  <%= f.input :picture %>


  <%= f.button :submit, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                organizations_path, :class => 'btn btn-info' %>
<% end %>
